generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pin {
  id        Int     @id @default(autoincrement())
  proyecto  String
  modelo    String
  nombre    String
  finca     String
  cedula    String
  telefono  String
  correo    String
  pin       String  @unique
  expiresAt DateTime
  used      Boolean @default(false)
  
  @@index([expiresAt]) // √çndice para futuras consultas
}
